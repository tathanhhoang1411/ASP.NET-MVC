
@{
    var listcategory = (List<WEB2.Models.Category>)ViewBag.listcategory;
    var listmonan = (List<WEB2.Models.MonAn>)ViewBag.listmonan;
    var erorr = (string)ViewBag.error;

}   <!-- Menu Start -->
<div class="container-xxl py-5">
    <div class="container">
        <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
            <h5 class="section-title ff-secondary text-center text-primary fw-normal">Food Menu</h5>
            <h1 class="mb-5">Most Popular Items</h1>
        </div>
        <div class="tab-class text-center wow fadeInUp" data-wow-delay="0.1s">
            <ul class="nav nav-pills d-inline-flex justify-content-center border-bottom mb-1">
                @{ foreach (var item in listcategory)
                    {
                        <li class="nav-item">
                            <a class="d-flex align-items-center text-start mx-3 ms-0 pb-3 " href="~/Menu/ListItemFood?Id=@item.ID">
                                <!--data-bs-toggle="pill" nằm trong thẻ a-->
                                <i class="fa fa-coffee fa-2x text-primary"></i>
                                <div class="ps-3">
                                    <small class="text-body">Popular</small>
                                    <h6 class="mt-n1 mb-0">@Html.DisplayFor(modelItem => item.LoaiMonAn)</h6>
                                </div>
                            </a>
                        </li>
                    }

                }

            </ul>
            <h6 class="text-danger">@erorr</h6>
            <div class="tab-content">
                <div id="tab-1" class="tab-pane fade show p-0 active">
                    <div class="row g-4  ">

                        @{

                            foreach (var item in listmonan)
                            {
                                <div class="col-lg-6 ">
                                    <div class="d-flex align-items-center">
                                        <img class="flex-shrink-0 img-fluid rounded" src="@Html.DisplayFor(modelItem => item.AnhMonAn)" alt="" style="width: 80px;">
                                        <div class="w-100 d-flex flex-column text-start ps-4">
                                            <h5 class="d-flex justify-content-between border-bottom pb-2">
                                                <span>@Html.DisplayFor(modelItem => item.TenMonAn)</span>
                                                <span class="text-primary">@Html.DisplayFor(modelItem => item.GiaBan)</span>
                                            </h5>
                                            <small class="fst-italic">@Html.DisplayFor(modelItem => item.MoTa)</small>
                                            <small style="text-align:right;">@Html.DisplayFor(modelItem => item.IdLoaiMonAn)</small>
                                        </div>
                                    </div>
                                </div>
                            }




                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Menu End -->